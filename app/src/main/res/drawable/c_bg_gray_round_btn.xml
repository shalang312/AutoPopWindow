<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/cEnabledBtn" />

            <corners android:radius="@dimen/cIconHeight" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/cGrayBtnPressed" />

            <corners android:radius="@dimen/cIconHeight" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/cGrayBtnNormal" />

            <corners android:radius="@dimen/cIconHeight" />
        </shape>
    </item>

</selector>